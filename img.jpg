        }
        .navbar a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            margin: 10px;
        }
        .navbar a:hover {
            color: yellow;
        }

        /* Carousel Container */
        .carousel-container {
            width: 100%;
            height: 90vh; /* Full height */
            overflow-x: scroll; /* Horizontal scrolling */
            display: flex;
            scroll-snap-type: x mandatory;
            scroll-behavior: smooth;
            border-bottom: 4px solid #333;
        }

        .carousel-slide {
            min-width: 100%;
            height: 90vh;
            scroll-snap-align: start;
            background-size: cover;
            background-position: center;
        }

        /* Adding images */
        .slide1 { background-image: url('img1.jpg'); }
        .slide2 { background-image: url('img2.jpg'); }
        .slide3 { background-image: url('img3.jpg'); }

        /* Footer */
        footer {
            background: black;
            color: white;
            text-align: center;
            padding: 10px;
        }
    </style>
